<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Комиссионный</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Index">Чугуевский Комиссионный</a>
                <a class="navbar-brand" href="/Home/Rules">Правила</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                @if (ViewBag.IsLogged == true)
                {
                    <li><a href="/Account/Cabinet"><span class="glyphicon glyphicon-user"></span> Мой кабинет </a></li>
                    <li><a href="/Account/Logout"><span class="glyphicon glyphicon-log-out"></span> Выйти</a></li>
                }
                else
                {
                    <li><a href="/Account/Login"><span class="glyphicon glyphicon-log-in"></span> Войти</a></li>
                }                
            </ul>           
        </div>
    </nav>

    @RenderBody()
    
    @Scripts.Render("~/bundles/javascript")
    @Scripts.Render("~/bundles/bootstrap")    
    @RenderSection("scripts", required: false)
</body>
</html>

